@model dynamic

@{
    Layout = null;
}

<!DOCTYPE html>

<html ng-app="todoApp">
    <head>
        <title>Todo App</title>
        <link href="lib/bootstrap/bootstrap.css" rel="stylesheet" />
        <style>
            .badge:hover {
                cursor: pointer;
                background: #94323b;
            }
        </style>
    </head>

    <body ng-controller="TodoController">
        <div class="container">
            <h1>Todos</h1>
            <div class="row">
                <div class="col-lg-6 col-lg-offset-3">
                    <ul class="list-group">
                        <li class="list-group-item" ng-repeat="todo in todos">
                            <span>{{todo.task}}</span>
                            <span class="badge" ng-click="markAsDone(todo)">Done</span>
                        </li>
                    </ul>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-6 col-lg-offset-3">
                    <div class="input-group">
                        <input type="text" ng-model="newTodoTask" placeholder="New task" class="form-control" />
                        <span class="input-group-btn">
                            <input type="button" value="Add new" ng-click="addNewTodo()" class="btn btn-default" />
                        </span>
                    </div>
                </div>
            </div>
        </div>

        <script src="lib/jquery/jquery.js"></script>
        <script src="lib/angular/angular.js"></script>
        <script src="lib/bootstrap/bootstrap.js"></script>
        <script src="app.js"></script>
    </body>
</html>
